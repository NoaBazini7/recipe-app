const express = require("express");
const router = express.Router();
const recipeListController = require("../controllers/recipeListController"); // Импорт контроллера

// Маршрут для получения всех списков рецептов
router.get("/", recipeListController.getAllRecipeLists);

// Маршрут для получения списка рецептов по ID
router.get("/:id", recipeListController.getRecipeListById);

// Маршрут для добавления нового списка рецептов
router.post("/", recipeListController.addRecipeList);

// Маршрут для обновления списка рецептов
router.put("/:id", recipeListController.updateRecipeList);

// Маршрут для удаления списка рецептов
router.delete("/:id", recipeListController.deleteRecipeList);

module.exports = router;
